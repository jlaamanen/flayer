{
  "name": "flayer",
  "version": "0.1.1",
  "description": "Expose your server functions to be directly used by your frontend",
  "keywords": [
    "server",
    "codegen"
  ],
  "author": "Joona Laamanen",
  "license": "MIT",
  "repository": "github:jlaamanen/flayer",
  "bugs": {
    "url": "https://github.com/jlaamanen/flayer/issues"
  },
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "exports": {
    ".": "./dist/main.js",
    "./client-lib": {
      "import": "./client-lib/node.mjs",
      "require": "./client-lib/node.cjs",
      "browser": "./client-lib/browser.js",
      "node": "./client-lib/node.cjs"
    }
  },
  "files": [
    "client-lib",
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "build:pkg": "tsc",
    "build:client-lib": "npm run build:client-lib:browser && npm run build:client-lib:node-cjs && npm run build:client-lib:node-esm",
    "build:client-lib:browser": "esbuild --bundle src/client-lib/index.ts --outfile=client-lib/browser.js --minify --sourcemap --format=esm --platform=browser",
    "build:client-lib:node-cjs": "esbuild --bundle src/client-lib/index.ts --outfile=client-lib/node.cjs --minify --sourcemap --format=cjs --platform=node --external:ws --external:isomorphic-ws",
    "build:client-lib:node-esm": "esbuild --bundle src/client-lib/index.ts --outfile=client-lib/node.mjs --minify --sourcemap --format=esm --platform=node --external:ws --external:isomorphic-ws",
    "build": "npm run build:pkg && npm run build:client-lib",
    "watch:pkg": "tsc --watch",
    "watch:client-lib:browser": "npm run build:client-lib:browser -- --watch",
    "watch:client-lib:node-cjs": "npm run build:client-lib:node-cjs -- --watch",
    "watch:client-lib:node-esm": "npm run build:client-lib:node-esm -- --watch",
    "watch": "concurrently npm:watch:pkg npm:watch:client-lib:browser npm:watch:client-lib:node-cjs npm:watch:client-lib:node-esm -n pkg,client-lib:browser,client-lib:node-cjs,client-lib:node-esm"
  },
  "devDependencies": {
    "@types/cookie-signature": "^1.1.2",
    "@types/express-session": "^1.17.10",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.2",
    "@types/uid-safe": "^2.1.5",
    "@types/websocket": "^1.0.10",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@hyrious/esbuild-plugin-commonjs": "^0.2.4",
    "cookie-signature": "^1.2.1",
    "esbuild": "^0.19.11",
    "express-session": "^1.17.3",
    "func-loc": "^0.1.16",
    "get-port": "^7.0.0",
    "isomorphic-ws": "^5.0.0",
    "source-map": "^0.7.4",
    "ts-morph": "^19.0.0",
    "uid-safe": "^2.1.5",
    "winston": "^3.11.0",
    "ws": "^8.16.0"
  }
}
