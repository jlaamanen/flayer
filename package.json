{
  "name": "flayer",
  "version": "0.1.0",
  "description": "Expose your server functions to be directly used by your frontend",
  "keywords": [
    "server",
    "codegen"
  ],
  "author": "Joona Laamanen",
  "license": "MIT",
  "repository": "github:jlaamanen/flayer",
  "bugs": {
    "url": "https://github.com/jlaamanen/flayer/issues"
  },
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "client-lib",
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "build:pkg": "tsc",
    "build:client-lib": "esbuild --bundle src/client-lib/index.ts --outdir=client-lib --minify --sourcemap --splitting --format=esm --target=esnext",
    "build": "npm run build:pkg && npm run build:client-lib",
    "watch:pkg": "tsc --watch",
    "watch:client-lib": "npm run build:client-lib -- --watch",
    "watch": "concurrently npm:watch:pkg npm:watch:client-lib"
  },
  "devDependencies": {
    "@types/cookie-signature": "^1.1.0",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "@types/uid-safe": "^2.1.2",
    "@types/websocket": "^1.0.5",
    "@types/ws": "^8.5.4",
    "concurrently": "^7.6.0",
    "jest": "^29.4.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "cookie-signature": "^1.2.0",
    "esbuild": "^0.17.4",
    "express-session": "^1.17.3",
    "func-loc": "^0.1.16",
    "get-port": "^6.1.2",
    "isomorphic-ws": "^5.0.0",
    "ts-morph": "^14.0.0",
    "uid-safe": "^2.1.5",
    "winston": "^3.8.2",
    "ws": "^8.12.0"
  }
}
